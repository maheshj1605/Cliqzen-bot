{
  "name": "CliqZen Bot",
  "identifier": "cliqzen_bot",
  "type": "bot",
  "description": "AI-powered Smart Task Manager Bot for Zoho Cliq.",

  "command_prefix": "/",

  "commands": [
    {
      "name": "create",
      "display_name": "Create Task",
      "description": "Create a new task.",
      "usage": "/create <task_name>",
      "handler": "bot/commands/create_task.deluge"
    },
    {
      "name": "list",
      "display_name": "List Tasks",
      "description": "List all tasks.",
      "usage": "/list",
      "handler": "bot/commands/list_tasks.deluge"
    },
    {
      "name": "update",
      "display_name": "Update Task",
      "description": "Update a task status or details.",
      "usage": "/update <task_id>",
      "handler": "bot/commands/update_task.deluge"
    },
    {
      "name": "delete",
      "display_name": "Delete Task",
      "description": "Delete a task.",
      "usage": "/delete <task_id>",
      "handler": "bot/commands/delete_task.deluge"
    },
    {
      "name": "analytics",
      "display_name": "Task Analytics",
      "description": "Show task analytics dashboard.",
      "usage": "/analytics",
      "handler": "bot/commands/analytics.deluge"
    },
    {
      "name": "help",
      "display_name": "Help",
      "description": "Show help commands and usage instructions.",
      "usage": "/help",
      "handler": "bot/commands/help.deluge"
    }
  ],

  "menus": [
    {
      "name": "Task Menu",
      "display_name": "Task Quick Menu",
      "handler": "bot/handlers/menu_handler.deluge",
      "menu": "bot/menus/main_menu.json"
    }
  ],

  "settings": {
    "allow_user_settings": true,
    "user_settings_config": [
      {
        "name": "daily_summary",
        "label": "Receive Daily Task Summary",
        "type": "boolean",
        "default": true
      },
      {
        "name": "reminder_time",
        "label": "Daily Reminder Time (HH:MM)",
        "type": "text",
        "default": "09:00"
      }
    ]
  },

  "handlers": {
    "on_message": "bot/handlers/on_message.deluge",
    "install": "bot/handlers/install_handler.deluge",
    "settings": "bot/handlers/settings_handler.deluge"
  }
}
