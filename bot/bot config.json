{
  "name": "CliqZen bot ",
  "display_name": "CliqZen â€” Smart Task Manager",
  "description": "AI-powered Smart Task OS for Zoho Cliq. Converts messages to tasks, manages sprints, sends reminders, and provides analytics.",
  "avatar": "https://i.ibb.co/7Sc2v7Q/cliqzen-logo.png",
  "status": "active",
  "type": "bot",

  "events": {
    "on_message": "bot/handlers/on_message.deluge",
    "on_install": "bot/handlers/install_handler.deluge",
    "on_settings_update": "bot/handlers/settings_handler.deluge",
    "on_menu_action": "bot/handlers/menu_handler.deluge"
  },

  "menus": {
    "main_menu": "bot/menus/main_menu.json",
    "admin_menu": "bot/menus/admin_menu.json"
  },

  "card_actions": {
    "update_task": "bot/handlers/on_card_action.deluge",
    "delete_task": "bot/handlers/on_card_action.deluge",
    "mark_done": "bot/handlers/on_card_action.deluge"
  },

  "settings": [
    {
      "name": "workspace_mode",
      "type": "string",
      "label": "Workspace Mode",
      "default_value": "team",
      "options": ["team", "personal"]
    },
    {
      "name": "default_priority",
      "type": "string",
      "label": "Default Task Priority",
      "default_value": "medium",
      "options": ["low", "medium", "high"]
    }
  ],

  "permissions": {
    "scopes": [
      "Chat.Read",
      "Chat.Write",
      "User.Read",
      "Files.Create",
      "Data.Read",
      "Data.Write"
    ]
  }
}
