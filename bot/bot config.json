    "ZohoCliq.Chat.READ",
    "ZohoCliq.Chat.WRITE",
    "ZohoCliq.Webhooks.CREATE",
    "ZohoCliq.Webhooks.READ"
  ],

  "event_handlers": {
    "on_message": "handlers/on_message.deluge",
